<div class="card-container">
      <div class="cards">
        <% @pools.each do |pool|  %>
          <div class="card-pool">
            <%= link_to pool_path(pool) do %>
              <%= cl_image_tag pool.picture, height: 200 %>
            <% end %>
            <div class="card-pool-infos">

                <%= image_tag pool.user.profile_picture, alt: "Owner profile picture", id: "avatar-img", class:"avatar-bordered" %>
              <div>
                <div>
                  <h2><%= pool.title %></h2>
                </div>
                <p><i class="fas fa-map-marker-alt"></i> <%= pool.city %> </p>
                <h3 class="card-pool-price"><%= pool.daily_price %> â‚¬ / jour</h2>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div
        id="map"
        style="width: 50%;
        height: 900px;
        "
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
</div>

